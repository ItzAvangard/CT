class Main inherits IO {
    main() : Object {
        let x : Int <- 42 in {
            if x < 100 then
                out_string("x is less than 100\n")
            else
                out_string("x is greater than or equal to 100\n")
            fi;
        }
    };
};

(* Вложенные комментарии и сложные случаи *)
(* 
  Это внешний комментарий.
  (* 
    А это вложенный комментарий. 
    -- Здесь однострочный комментарий внутри многострочного
  *)
*)

class Main inherits IO {
  main() : Object {
    {
      -- Однострочный комментарий перед кодом
      out_string("Привет, (* это не комментарий *) мир!\n");  -- Строка с (* символами *)
      
      (* 
        Многострочный комментарий в середине кода:
        x <- 100 / 0  -- Это не выполнится
      *)
    }
  };
};

